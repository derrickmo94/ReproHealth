<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearlayout_style"
    android:paddingTop="@dimen/padding_top58"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hericxon.reprohealth.knowyourebody.Emotions"
    tools:showIn="@layout/activity_emotions">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/body_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <LinearLayout
            style="@style/linearlayout_style">

            <ImageView
                style="@style/imageview_style"
                android:contentDescription="@string/imageview"/>

            <Button
                android:id="@+id/adolescence_challenges_btn"
                style="@style/button_style"
                android:text="@string/andolescence_challeges_btn" />

            <Button
                android:id="@+id/psychological_btn"
                style="@style/button_style"
                android:text="@string/psychological_btn" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_top58"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hericxon.reprohealth.knowyourebody.FemaleHormones"
    tools:showIn="@layout/activity_female_hormones">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/body_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            style="@style/linearlayout_style">

            <ImageView
                style="@style/imageview_style"
                android:contentDescription="@string/imageview"/>

            <TextView
                style="@style/TextView"
                android:text="@string/female_hormones_details" />
            <TextView
                style="@style/TextView"
                android:text="@string/female_hormone_estrogen_details" />
            <TextView
                style="@style/TextView"
                android:text="@string/female_hormone_progestrone_details"/>
            <TextView
                style="@style/TextView"
                android:text="@string/female_hormone_fsh_details" />
            <TextView
                style="@style/TextView"
                android:text="@string/female_hormone_lh_details"/>

        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
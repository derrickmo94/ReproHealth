<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dim60"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hericxon.reprohealth.knowYoureBody.SexVsGender"
    tools:showIn="@layout/activity_sex_and_gender">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/body_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                style="@style/linearlayout_style"
                android:layout_below="@+id/imageView_gender_vs_sex"
                android:layout_marginTop="-6dp">

                <TextView
                    android:id="@+id/textView_sex"
                    style="@style/TextView"
                    android:text="@string/sex_details" />

                <TextView
                    android:id="@+id/textView_gender"
                    style="@style/TextView"
                    android:text="@string/gender_details" />
            </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#62ffcc33"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_top58"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hericxon.reprohealth.user.UserActivity"
    tools:showIn="@layout/activity_user">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USER PROFILE"
                android:gravity="center_horizontal"
                 android:textColor="#603b04"
                android:background="@drawable/text_view_shape"
                android:typeface="sans"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp">
                <ImageView
                    android:id="@+id/user_photo"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/imageview"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/user_profile_background"
                    android:layout_width="250dp"
                    android:layout_height="200dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginStart="110dp"
                    android:src="@drawable/ic_photo_camera"
                    app:backgroundTint="#fcb95c"/>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:text="USER NAME"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textColor="#603b04"/>
                <TextView
                    android:id="@+id/text_view_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="180dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="8dp"
                    android:text=" madibo derric"
                    android:textColor="#0b0b0b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:text="USER EMAIL"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textColor="#603b04"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/textview_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginLeft="180dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="email address trtytyty g"
                    android:textColor="#0b0b0b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/textview_user_email"
                    android:text="PHONE NUMBER"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textColor="#603b04"/>
                <TextView
                    android:id="@+id/textview_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_user_email"
                    android:layout_marginLeft="180dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="8dp"
                    android:text="User number"
                    android:textColor="#0b0b0b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_user_phone"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:text="USER PASSWRD"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textColor="#603b04"/>
               <TextView
                   android:id="@+id/textview_user_pass"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/textview_user_phone"
                   android:layout_marginLeft="180dp"
                   android:layout_marginStart="180dp"
                   android:layout_marginTop="8dp"
                   android:text="password "
                   android:textColor="#0b0b0b"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/user_edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/textview_user_pass"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"
                    android:src="@drawable/ic_edit_black"
                    android:background="@drawable/button_bg_circle"
                    app:backgroundTint="#e9a52f"/>

            </RelativeLayout>
</LinearLayout>